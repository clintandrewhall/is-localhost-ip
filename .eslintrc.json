{
  "env": {
    "commonjs": true,
    "es6": true,
    "node": true
  },
  "extends": ["eslint:recommended", "plugin:node/recommended"],
  "parserOptions": {
    "ecmaVersion": 2019,
    "sourceType": "script"
  },
  "plugins": ["optimize-regex"],
  "rules": { "optimize-regex/optimize-regex": "error" },
  "overrides": [
    {
      "files": ["**/__tests__/*.js", "*.test.js", "**/__mocks__/*.js"],
      "env": {
        "jest": true
      },
      "rules": {}
    }
  ]
}
